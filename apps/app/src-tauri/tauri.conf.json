{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PuraToDo",
  "version": "0.6.4",
  "identifier": "top.puratodo.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PuraToDo",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "minimumSystemVersion": "12.0"
    },
    "android": {
      "minSdkVersion": 24
    }
  },
  "plugins": {
    "opener": {},
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0OEIwNzEyNjIzQkYxOTcKUldTWDhUdGlFZ2VMUkl0SnAvNGRmd29OSU94WDBycFRUTnc3UGZ6bjZiL1A2UHBReGcvclRaeWYK",
      "endpoints": [
        "https://github.com/gtn1024/puratodo/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
