{
  "name": "puratodo-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @puratodo/web dev",
    "dev:web": "pnpm --filter @puratodo/web dev",
    "dev:app": "pnpm --filter @puratodo/app tauri:dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @puratodo/web build",
    "build:app": "pnpm --filter @puratodo/app tauri:build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "db:migration:new": "pnpm --filter @puratodo/web db:migration:new",
    "db:push": "pnpm --filter @puratodo/web db:push",
    "db:pull": "pnpm --filter @puratodo/web db:pull",
    "db:diff": "pnpm --filter @puratodo/web db:diff"
  },
  "devDependencies": {
    "sharp": "^0.33.0",
    "typescript": "^5",
    "@antfu/eslint-config": "^7.5.0",
    "eslint": "^10.0.2",
    "@eslint-react/eslint-plugin": "^2.13.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.2"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@9.0.0"
}